<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team11.comp3074_project11.activity.SearchResultsActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/titleSearchResults"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/sortSpinner"
        android:layout_width="220dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/noFlightsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="There are no flights that match your search criteria." />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/resultsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</LinearLayout>
